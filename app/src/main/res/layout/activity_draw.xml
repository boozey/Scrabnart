<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nakedape.scrabnart.DrawActivity"
    android:orientation="vertical"
    android:id="@+id/drawing_viewgroup"
    android:background="@color/white">

    <com.nakedape.scrabnart.DrawingView
        android:id="@+id/drawing"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#FFFFFFFF" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/palette_button"
            android:onClick="OpenPalette"
            android:background="@drawable/ic_palette" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take turn"
            android:id="@+id/button"
            android:onClick="TakeTurn" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/tile1"
            android:background="@drawable/ic_a_tile"/>

        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/tile2"
            android:background="@drawable/ic_b_tile" />

        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/tile3"
            android:background="@drawable/ic_a_tile" />

        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/tile4"
            android:background="@drawable/ic_a_tile" />

        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/tile5"
            android:background="@drawable/ic_a_tile" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">>
        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/tile6"
            android:background="@drawable/ic_a_tile" />

        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/tile7"
            android:background="@drawable/ic_a_tile" />

        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/tile8"
            android:background="@drawable/ic_a_tile" />

        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/tile9"
            android:background="@drawable/ic_a_tile"/>
    </LinearLayout>

        </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/letter1"
            android:background="@drawable/empty_tile" />
        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/letter2"
            android:background="@drawable/empty_tile"  />
        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/letter3"
            android:background="@drawable/empty_tile"  />
        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/letter4"
            android:background="@drawable/empty_tile"  />
        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/letter5"
            android:background="@drawable/empty_tile"  />
        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/letter6"
            android:background="@drawable/empty_tile"  />
        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/letter7"
            android:background="@drawable/empty_tile"  />
        <ImageButton
            android:layout_width="@dimen/letter_tile_size"
            android:layout_height="@dimen/letter_tile_size"
            android:id="@+id/letter8"
            android:background="@drawable/empty_tile"  />
    </LinearLayout>
</LinearLayout>
